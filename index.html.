<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Photo Marker</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; }
    img { max-width: 100%; height: auto; display: block; margin: 10px auto; }
    .button { margin: 10px; padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer; }
    .marked-photos { display: flex; flex-wrap: wrap; }
    .marked-photo { margin: 5px; }
  </style>
</head>
<body>

  <h2>Photo Marker</h2>
  
  <input type="file" accept="image/*" multiple onchange="loadPhotos(event)" class="button">
  <div id="photoContainer"></div>

  <h2>Marked Photos</h2>
  <div id="markedPhotos" class="marked-photos"></div>

  <script>
    const markedPhotos = JSON.parse(localStorage.getItem('markedPhotos')) || [];

    function loadPhotos(event) {
      const files = event.target.files;
      const photoContainer = document.getElementById('photoContainer');
      photoContainer.innerHTML = '';
      
      Array.from(files).forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const photoDiv = document.createElement('div');
          const img = document.createElement('img');
          img.src = e.target.result;
          img.alt = 'Photo ' + (index + 1);
          const markButton = document.createElement('button');
          markButton.textContent = 'Mark';
          markButton.className = 'button';
          markButton.onclick = () => markPhoto(e.target.result);
          photoDiv.appendChild(img);
          photoDiv.appendChild(markButton);
          photoContainer.appendChild(photoDiv);
        };
        reader.readAsDataURL(file);
      });
    }

    function markPhoto(photoSrc) {
      if (!markedPhotos.includes(photoSrc)) {
        markedPhotos.push(photoSrc);
        localStorage.setItem('markedPhotos', JSON.stringify(markedPhotos));
        displayMarkedPhotos();
      }
    }

    function displayMarkedPhotos() {
      const markedPhotosContainer = document.getElementById('markedPhotos');
      markedPhotosContainer.innerHTML = '';
      markedPhotos.forEach(photoSrc => {
        const img = document.createElement('img');
        img.src = photoSrc;
        img.alt = 'Marked Photo';
        img.className = 'marked-photo';
        img.style.width = '100px';
        markedPhotosContainer.appendChild(img);
      });
    }

    // Display marked photos on load
    displayMarkedPhotos();
  </script>

</body>
</html>
